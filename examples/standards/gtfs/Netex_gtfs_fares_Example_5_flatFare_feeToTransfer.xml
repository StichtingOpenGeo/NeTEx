	<!--- =============== RESULTS =========== -->
	<dataObjects>
		<CompositeFrame version="1" id="mygtfsxm:CompositeFrame:DTA">
			<TypeOfFrameRef ref="gtfs:TypeOFrame:GTFS"/>
			<!--- ======= CODESPACEs======== -->
			<codespaces>
				<Codespace id="mygtfsxm">
					<Xmlns>mygtfsxm</Xmlns>
					<XmlnsUrl>http://www.demoagency.com/</XmlnsUrl>
					<Description>Demo AGency</Description>
				</Codespace>
			</codespaces>
			<!--- =======FRAME DEFAULTS======== -->
			<FrameDefaults>
				<DefaultCodespaceRef ref="mygtfsxm"/>
				<DefaultCurrency>USD</DefaultCurrency>
			</FrameDefaults>
			<frames>
				<ResourceFrame version="any" id="mygtfsxm:ResourceFrame:DTA">
					<organisations>
						<!--- =====Agency========= -->
						<Authority version="any" id="mygtfsxm:Authority:DTA">
							<Name>Demo Transit Authority</Name>
							<ContactDetails>
								<Url>http://code.google.com/p/googletransitdatafeed/wiki/FareExamples</Url>
							</ContactDetails>
						</Authority>
					</organisations>
				</ResourceFrame>
				<!--- =============== FAREs =========== -->
				<FareFrame version="any" id="mygtfsxm:FareFrame:DTA">
					<frameValidityConditions>
						<SimpleValidityCondition>
							<FromDate>2011-12-30T00:00:00Z</FromDate>
						</SimpleValidityCondition>
					</frameValidityConditions>
					<!--- ====Fare USAGE PARAMETERS======= -->
					<fareUsageParameters>
						<UsageValidityPeriod version="any" id="mygtfsxm:UsageValidityPeriod:endOfRide">
							<UsageEnd>endOfRide</UsageEnd>
						</UsageValidityPeriod>
						<UsageValidityPeriod version="any" id="mygtfsxm:UsageValidityPeriod:90minutes">
							<UsageEnd>endOfRide</UsageEnd>
							<StandardDuration>PT90M</StandardDuration>
						</UsageValidityPeriod>
						<FrequencyOfUse version="any" id="mygtfsxm:FrequencyOfUse:oneRide">
							<Name>Single rider</Name>
							<FrequencyOfUseType>single</FrequencyOfUseType>
							<MinimalFrequency>1</MinimalFrequency>
							<MaximalFrequency>1</MaximalFrequency>
						</FrequencyOfUse>
						<Interchanging version="any" id="mygtfsxm:Interchanging:noTransfer">
							<Name>No  transfer faid for</Name>
							<MaximumNumberOfInterchanges>0</MaximumNumberOfInterchanges>
						</Interchanging>
						<Interchanging version="any" id="mygtfsxm:Interchanging:transfer">
							<Name>Extra 25 c fee for a transfer</Name>
							<prices>
								<CellPriceRef version="any" ref="mygtfsxm:UsageParameterPrice:transfer"/>
							</prices>
							<MaximumNumberOfInterchanges>1</MaximumNumberOfInterchanges>
							<MaximumTimeToMakeATransfer>PT90M</MaximumTimeToMakeATransfer>
						</Interchanging>
					</fareUsageParameters>
					<!--- ====Fare Product======= -->
					<fareProducts>
						<PreassignedFareProduct version="any" id="mygtfsxm:PreassignedFareProduct:ride">
							<Name>Single flat fare to ride on the DTA,  no transfer</Name>
							<ChargingMomentRef version="any" ref="gtfs:ChargingMoment:0"/>
							<!--- ====VALIDITY PARAMETER ASSIGNMENTs ====== -->
							<groupsOfAccessRightParameterAssignments>
								<GroupOfAccessRightParameterAssignments version="any" id="mygtfsxm:GroupOfAccessRightParameterAssignments:DTA_bus">
									<accessRightParameterAssignments>
										<ValidityParameterAssignment version="any" id="mygtfsxm:ValidityParameterAssignment:DTA_bus">
											<VehicleModes>bus</VehicleModes>
											<AuthorityRef version="any" ref="mygtfsxm:Authority:DTA"/>
										</ValidityParameterAssignment>
									</accessRightParameterAssignments>
								</GroupOfAccessRightParameterAssignments>
								<GroupOfAccessRightParameterAssignments version="any" id="mygtfsxm:GroupOfAccessRightParameterAssignments:firstRide">
									<GroupOfAccessRightParameterAssignmentsRef version="any" ref="mygtfsxm:GroupOfAccessRightParameterAssignments:DTA_bus"/>
									<accessRightParameterAssignments>
										<ValidityParameterAssignment version="any" id="mygtfsxm:ValidityParameterAssignment:firstRide">
											<Name>No  transfers </Name>
											<FrequencyOfUseRef version="any" ref="mygtfsxm:FrequencyOfUse:oneRide"/>
											<InterchangingRef version="any" ref="mygtfsxm:Interchanging:noTransfer"/>
											<UsageValidityPeriodRef version="any" ref="mygtfsxm:UsageValidityPeriod:endOfRide"/>
										</ValidityParameterAssignment>
									</accessRightParameterAssignments>
								</GroupOfAccessRightParameterAssignments>
								<GroupOfAccessRightParameterAssignments version="any" id="mygtfsxm:GroupOfAccessRightParameterAssignments:transferRide">
									<GroupOfAccessRightParameterAssignmentsRef version="any" ref="mygtfsxm:GroupOfAccessRightParameterAssignments:DTA_bus"/>
									<accessRightParameterAssignments>
										<ValidityParameterAssignment version="any" id="mygtfsxm:ValidityParameterAssignment:transferRide">
											<Name>Transfer transfers </Name>
											<InterchangingRef version="any" ref="mygtfsxm:Interchanging:transfer"/>
											<UsageValidityPeriodRef version="any" ref="mygtfsxm:UsageValidityPeriod:90minutes"/>
										</ValidityParameterAssignment>
									</accessRightParameterAssignments>
								</GroupOfAccessRightParameterAssignments>
							</groupsOfAccessRightParameterAssignments>
							
							<!--- ====VALIDABLE ELEMENTs====== -->
							<validableElements>
								<ValidableElement version="any" id="mygtfsxm:ValidableElement:firstRide">
									<Name>first ride</Name>
									<groupsOfAccessRightParameterAssignments>
										<GroupOfAccessRightParameterAssignmentsRef version="any" ref="mygtfsxm:GroupOfAccessRightParameterAssignments:firstRide"/>
									</groupsOfAccessRightParameterAssignments>
								</ValidableElement>
								<ValidableElement version="any" id="mygtfsxm:ValidableElement:transferRide">
									<Name>first ride</Name>
									<groupsOfAccessRightParameterAssignments>
										<GroupOfAccessRightParameterAssignmentsRef version="any" ref="mygtfsxm:GroupOfAccessRightParameterAssignments:transferRide"/>
									</groupsOfAccessRightParameterAssignments>
								</ValidableElement>
							</validableElements>
							<!--- ====PRODUCT PRICEs====== -->
							<prices>
								<FareProductPriceRef version="any" ref="mygtfsxm:FareProductPrice:firstRide"/>
							</prices>
							<!--- ====ACCESS RIGHTS======= -->
							<accessRightsInProduct>
								<AccessRightInProduct version="any" id="mygtfsxm:AccessRightInProduct:firstRide" order="1">
									<Name>First ride</Name>
									<IsFirstInSequence>true</IsFirstInSequence>
									<ValidableElementRef version="any" ref="mygtfsxm:ValidableElement:firstRide"/>
								</AccessRightInProduct>
							</accessRightsInProduct>
						</PreassignedFareProduct>
					</fareProducts>
					<farePrices>
						<PriceGroup version="any" id="mygtfsxm:PriceGroup:DTA">
							<members>
								<FareProductPrice version="any" id="mygtfsxm:FareProductPrice:firstRide">
									<Amount>1.75</Amount>
									<Currency>USD</Currency>
									<PreassignedFareProductRef version="any" ref="mygtfsxm:PreassignedFareProduct:ride"/>
								</FareProductPrice>
								<CellPrice version="any" id="mygtfsxm:UsageParameterPrice:transfer">
									<Amount>0.25</Amount>
									<Currency>USD</Currency>
									<InterchangingRef version="any" ref="mygtfsxm:Interchanging:transfer"/>
								</CellPrice>
							</members>
						</PriceGroup>
					</farePrices>
				</FareFrame>
			</frames>
